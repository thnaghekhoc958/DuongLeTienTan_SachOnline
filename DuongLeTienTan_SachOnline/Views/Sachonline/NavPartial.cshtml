<!-- Form đăng ký (ẩn/hiện khi nhấn) -->
<div class="container mt-3" id="formDangKy" style="display: none;">
    @Html.Action("DangKyPartial", "User")
</div>

<!-- Script: toggle form đăng ký -->
<script>
    document.addEventListener("DOMContentLoaded", function () {
        const btn = document.getElementById("btnDangKy");
        const form = document.getElementById("formDangKy");

        btn.addEventListener("click", function (e) {
            e.preventDefault();
            form.style.display = (form.style.display === "none") ? "block" : "none";
        });
    });
</script>
