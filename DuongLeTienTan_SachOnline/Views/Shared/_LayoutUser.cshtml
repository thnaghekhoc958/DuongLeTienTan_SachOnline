<!DOCTYPE html>
<html>
<head>
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- FontAwesome (tuỳ chọn icon đẹp) -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
    <!-- Bootstrap 5 JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>


    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/Scripts/js")

    <link href="~/Content/css/style.css" rel="stylesheet" />
</head>

<body>
    <!-- Navbar -->
    @Html.Action("NavPartial", "Sachonline")

    <!-- Slider -->
    @Html.Action("SliderPartial", "Sachonline")

    <!-- Main Content -->
    <div class="container mt-4">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-3">
                <div class="sidebar">
                    @Html.Action("ChuDePartial", "Sachonline")
                </div>
                <div class="sidebar">
                    @Html.Action("NhaXuatBanPartial", "Sachonline")
                </div>
            </div>

            <!-- Content -->
            <div class="col-md-9">
                <div class="content-area">
                    @RenderBody()
                </div>

                @if (IsSectionDefined("SachBanNhieu"))
                {
                    <div class="content-area">
                        @RenderSection("SachBanNhieu", required: false)
                    </div>
                }

                @if (IsSectionDefined("SachTheoNhaXuatBanPartial"))
                {
                    <div class="content-area">
                        @RenderSection("SachTheoNhaXuatBanPartial", required: false)
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Footer -->
    @Html.Action("FooterPartial", "Sachonline")

</body>
</html>
