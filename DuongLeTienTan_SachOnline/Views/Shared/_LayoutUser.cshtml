<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/Scripts/js")
    <style>
        .imgbook {
            width: 100%;
            height: 200px;
            object-fit: cover;
            transition: all 0.3s ease;
        }

            .imgbook:hover {
                transform: scale(0.95);
            }

        .imgsachbannhieu {
            width: 80px;
            height: 100px;
            object-fit: cover;
        }
    </style>

</head>
<body>
    @Html.Action("NavPartial", "Sachonline")
    @Html.Action("SliderPartial", "Sachonline")

    <div class="container" style="margin-top:20px;">
        <div class="row">
            <div class="col-md-3">
                @Html.Action("ChuDePartial", "Sachonline")
                @Html.Action("NhaXuatBanPartial", "Sachonline")
            </div>

            <div class="col-md-9">
                @RenderBody()
                @RenderSection("SachBanNhieu", required: false)
            </div>
        </div>
    </div>

    @Html.Action("FooterPartial", "Sachonline")
</body>
</html>
